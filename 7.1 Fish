import java.util.*;

class Solution {
    public int solution(int[] A, int[] B) {
        int counter = 0;
        Deque<Integer> downstream = new ArrayDeque<Integer>();
        for (int i=0; i<A.length; i++){
            if (B[i]==0){
                while (downstream.peekFirst() != null && downstream.getFirst()<A[i]){
                    downstream.removeFirst();
                    counter--;
                }
                if (downstream.peekFirst() == null){
                    counter++;
                }
            } else {
                downstream.addFirst(A[i]);
                counter++;
            }
        }
        return counter;
    }
}
